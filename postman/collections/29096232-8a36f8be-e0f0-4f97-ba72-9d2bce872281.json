					"event": [
						{
							"listen": "test",
							"script": {
								"id": "1353274a-e077-462e-bfc8-cf1442765d43",
								"exec": [
									"if (pm.response.code === 200 || pm.response.code === 201) {",
									"    // 1. Convertir la respuesta JSON a objeto",
									"    const response = pm.response.json();",
									"",
									"    // 2. Extraer los tokens",
									"    const accessToken = response.accessToken;",
									"    const refreshToken = response.refreshToken;",
									"",
									"    // 3. Guardar las variables en la Colección de Postman",
									"    if (accessToken) {",
									"        pm.collectionVariables.set(\"accessToken\", accessToken);",
									"        pm.collectionVariables.set(\"refreshToken\", refreshToken);",
									"",
									"        console.log(\"✅ Tokens guardados. Nuevo AT:\", accessToken.substring(0, 20) + \"...\");",
									"    } else {",
									"        console.log(\"❌ La respuesta no contiene tokens.\");",
									"    }",
									"} else {",
									"    console.log(\"La solicitud falló con código:\", pm.response.code);",
									"}"
								],
