	"auth": {
		"type": "bearer",
		"bearer": [
			{
				"key": "token",
				"value": "{{accessToken}}",
				"type": "string"
			}
		]
	},
	"event": [
		{
			"listen": "prerequest",
			"script": {
				"id": "c510750a-9e9a-4d1a-9bda-423f64a12288",
				"type": "text/javascript",
				"packages": {},
				"requests": {},
				"exec": [
					"// =======================================================",
					"// 1. CONFIGURACIÓN INICIAL Y DECLARACIÓN DE VARIABLES",
					"// =======================================================",
					"",
					"// Obtén los tokens y la URL base de las variables de colección",
					"let accessToken = pm.collectionVariables.get(\"accessToken\");",
					"let refreshToken = pm.collectionVariables.get(\"refreshToken\");",
					"const apiBaseUrl = pm.collectionVariables.get(\"baseUrl\") || \"http://localhost:3000/auth\";",
					"",
					"const refreshUrl = apiBaseUrl + \"/auth/refresh-token\";",
					"let tokenNeedsRenewal = true;",
					"const gracePeriod = 60000; // 60 segundos antes de la expiración real para renovar",
					"",
					"",
					"// =======================================================",
					"// 2. VERIFICACIÓN DE EXPIRACIÓN DEL ACCESS TOKEN (AT)",
					"// =======================================================",
					"",
					"if (accessToken) {",
					"    try {",
					"        const parts = accessToken.split('.');",
					"        if (parts.length === 3) {",
					"            const payload = JSON.parse(atob(parts[1]));",
					"            const expirationTime = payload.exp * 1000; // Convertir segundos a milisegundos",
					"            const currentTime = Date.now();",
					"            ",
					"            if (currentTime < expirationTime - gracePeriod) {",
					"                // El token es válido y no está cerca de expirar.",
					"                tokenNeedsRenewal = false;",
					"            } else {",
					"                // Token cerca de expirar.",
					"                console.log(\"Token AT cerca de expirar. Iniciando rotación.\");",
					"                tokenNeedsRenewal = true;",
					"            }",
					"        }",
					"    } catch (e) {",
					"        console.error(\"Error al decodificar el AT. Forzando renovación.\");",
					"        tokenNeedsRenewal = true;",
					"    }",
					"} else {",
					"    // Si no hay AT, necesitamos obtener uno.",
					"    console.log(\"No se encontró AT. Se requiere renovación.\");",
					"}",
					"",
					"",
					"// =======================================================",
					"// 3. LÓGICA DE RENOVACIÓN CONDICIONAL (RT)",
					"// =======================================================",
					"",
					"// Si el AT necesita ser renovado (o no existe)",
					"if (tokenNeedsRenewal) {",
					"    ",
					"    // Si no tenemos Refresh Token, no podemos renovar. ¡Fallo de flujo!",
					"    if (!refreshToken) {",
					"        console.error(\"❌ ERROR: No se puede renovar. Refresh Token ausente. Por favor, haga un login completo.\");",
					"        // Detiene la ejecución del script y, por lo tanto, de la petición principal.",
					"        throw new Error(\"Autenticación fallida: RT no disponible.\");",
					"    }",
					"    ",
					"    console.log(\"Intentando renovar AT con RT...\");",
					"",
					"    // Configura la petición de Refresh Token",
					"    const refreshRequest = {",
					"        url: refreshUrl,",
					"        method: 'POST',",
					"        header: {",
					"            // ⚠️ OJO: El RT se envía como Bearer Token al endpoint /refresh",
					"            'Authorization': `Bearer ${refreshToken}`,",
					"            'Content-Type': 'application/json'",
					"        },",
					"        body: {",
					"            // El cuerpo puede ser vacío ya que todo está en el header",
					"            mode: 'raw',",
					"            raw: JSON.stringify({}) ",
					"        }",
					"    };",
					"",
					"    // Envía la petición de renovación de forma síncrona",
					"    pm.sendRequest(refreshRequest, function (err, res) {",
					"        if (err || res.code !== 200) {",
					"            console.error(\"❌ Falló la rotación del Refresh Token.\", res ? res.json() : '');",
					"            ",
					"            // Borra ambos tokens para forzar un login completo en el siguiente intento",
					"            pm.collectionVariables.unset(\"accessToken\");",
					"            pm.collectionVariables.unset(\"refreshToken\");",
					"            ",
					"            throw new Error(\"Fallo la renovación del token. Sesión terminada.\");",
					"",
					"        } else {",
					"            // Renovación exitosa",
					"            const responseJson = res.json();",
					"            const newAccessToken = responseJson.accessToken;",
					"            const newRefreshToken = responseJson.refreshToken;",
					"",
					"            if (newAccessToken && newRefreshToken) {",
					"                // Guardar AMBOS tokens (el RT fue rotado por el servidor)",
					"                pm.collectionVariables.set(\"accessToken\", newAccessToken);",
					"                pm.collectionVariables.set(\"refreshToken\", newRefreshToken);",
					"                console.log(\"✅ Tokens renovados y guardados. AT:\", newAccessToken.substring(0, 30) + \"...\");",
					"                // Actualiza el token local para que se use en el paso 4",
					"                accessToken = newAccessToken;",
					"            } else {",
					"                 throw new Error(\"Renovación fallida: El servidor no devolvió ambos tokens.\");",
					"            }",
					"        }",
					"    });",
					"} else {",
					"    console.log(\"Token AT existente. Reutilizando: \" + accessToken.substring(0, 30) + \"...\"); ",
					"}"
				]
			}
		},
